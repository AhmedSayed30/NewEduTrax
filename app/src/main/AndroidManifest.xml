<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/new_logo2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/new_logo2"
        android:supportsRtl="false"
        android:theme="@style/Theme.NewEduTrax"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.verify.VerifyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.all_courses.AllCoursesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.start_course.StartCourseActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.full_screen_youtube.FullScreenYoutubeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.login.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.activity.register.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.activity.course_player.CoursePlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.course_details.CourseDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:exported="false" />
    </application>

</manifest>